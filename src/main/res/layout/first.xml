<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout>
    <EditText

        android:layout_column="0"
        android:layout_row="0"
        android:id="@+id/et1"
        android:layout_height="100dp"
        android:layout_width="380dp"/>

</RelativeLayout>

    <GridLayout
        android:id="@+id/gl"
        android:layout_row="4"
        android:layout_column="0">


        <Button
            android:layout_column="2"
            android:layout_row="3"
            android:id="@+id/bt9"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text="9"

            />



        <Button
            android:layout_column="3"
            android:layout_row="3"
            android:id="@+id/btd"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text=" / "


            />

        <Button
            android:layout_column="0"
            android:layout_row="4"
            android:id="@+id/bt4"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text="4"

            />

        <Button
            android:layout_column="1"
            android:layout_row="4"
            android:id="@+id/bt5"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text=" 5 "

            />

        <Button
            android:layout_column="2"
            android:layout_row="4"
            android:id="@+id/bt6"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text="6"

            />

        <Button
            android:layout_column="3"
            android:layout_row="4"
            android:id="@+id/btm"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text=" * "

            />

        <Button
            android:layout_column="0"
            android:layout_row="5"
            android:id="@+id/bt1"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text="1"

            android:onClick="onClick (trigo)" />

        <Button
            android:layout_column="2"
            android:layout_row="5"
            android:id="@+id/bt3"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text="3"

            />

        <Button
            android:layout_column="3"
            android:layout_row="5"
            android:id="@+id/bts"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text=" - "

            />

        <Button
            android:layout_column="0"
            android:layout_row="6"
            android:id="@+id/btdot"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text="."

            />

        <Button
            android:layout_column="1"
            android:layout_row="6"
            android:id="@+id/bt0"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text=" 0 "

            />

        <Button
            android:layout_column="2"
            android:layout_row="6"
            android:id="@+id/bta"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text=" + "

            />


        <Button
            android:layout_column="3"
            android:layout_row="6"
            android:id="@+id/bteq"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text="="

            />

        <Button
            android:layout_column="0"
            android:layout_row="3"
            android:id="@+id/bt7"

            android:text="7"
            android:layout_height="60dp"
            android:layout_width="100dp"
             />

        <Button
            android:layout_column="1"
            android:layout_row="5"
            android:id="@+id/bt2"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text=" 2 "
            />

        <Button
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/btc"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="C"
            />

        <Button
            android:text="toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toast" />

        <Button
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/tr"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="@string/trigno"
            android:onClick="onClick (trigo)" />

        <Button
            android:text="HOME"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/home" />

        <Button
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/bt8"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:text=" 8 "

             />

    </GridLayout>


</GridLayout>
